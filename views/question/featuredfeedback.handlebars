<style>
    td {
        max-width: 200px;
    }
</style>
<h1>Featured Questions</h1>
<br>
<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Feedback Type</th>
                <th>Feedback</th>
                {{#if user}}
                <th>Answer</th>
                {{/if}}
                {{#if user}}
                <th>Remove Feedback</th>
                {{/if}}
            </tr>
        </thead>
        <tbody>
            {{#each feedbacks}}
            <tr>
                <td>{{ feedbacktype }}</td>
                <td>{{ feedback }}</td>
                <td>{{ answer }}</td>
                {{#if (ifCheck user.admin)}}
                <td>
                    <a href="/" class="card-link">
                        <i class="fas fa-trash"></i>
                        Remove Feedback
                    </a>
                </td>
                {{/if}}
             </tr>
             {{/each}}
        </tbody>
    </table>
</div>
